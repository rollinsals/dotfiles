# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border        BG      Text        Indicator    Child
client.focused          $base         $base   $text-color $foam        $foam
client.focused_inactive $base      $overlay   $text-color $highlight-lo 
client.unfocused        $highlight-lo $base   $subtle     $highlight-lo 
client.urgent           $highlight-lo $base   $text-color $rose 
client.placeholder      $highlight-lo $base   $text-color $gold 
client.background       #ffffff

set $theme_template_script "s/GTK_THEME/$gtk-theme/g; s/ICON_THEME/$icon-theme/g; s/CURSOR_THEME/$cursor-theme/g; s/GUI_FONT/$gui-font/g; s/KVANTUM_THEME/$kvantum-theme/g; s/BACKGROUND_COLOR/$base00/g; s/ACCENT_COLOR/$base0C/g; s/TEXT_COLOR/$base06/g; s/TERM_FONT/$term-font/g;"
